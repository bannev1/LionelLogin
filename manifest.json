{
  "name": "LionelLogin - Firefox",
  "description": "Auto-login to Lionel2 on Firefox - More information here: https://bit.ly/370jL6J",
  "homepage_url": "https://bit.ly/370jL6J",
  "version": "6.5.5",
  "manifest_version": 2,
  "icons": {
    "16": "/images/lionelicon16.png",
    "32": "/images/lionelicon32.png",
    "45": "/images/lionelicon45.png",
    "48": "/images/lionelicon48.png",
    "64": "/images/lionelicon64.png",
    "128": "/images/lionelicon128.png",
    "180": "/images/lionelicon180.png"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://lionel2.kgv.edu.hk/login/index.php*"],
      "js": ["login.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/lionelicon16.png",
      "32": "/images/lionelicon32.png",
      "45": "/images/lionelicon45.png",
      "48": "/images/lionelicon48.png",
      "64": "/images/lionelicon64.png",
      "128": "/images/lionelicon128.png",
      "180": "/images/lionelicon180.png"
    },
    "browser_style": true,
    "default_title": "LionelLogin"
  },
  "permissions": ["storage", "activeTab", "tabs", "webRequest"],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
