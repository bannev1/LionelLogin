{
  "name": "LionelLogin",
  "description": "Auto-login to Lionel2 for Firefox - More information here: https://bit.ly/370jL6J",
  "homepage_url": "https://bit.ly/370jL6J",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "lion.svg"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://lionel2.kgv.edu.hk/login/index.php*"],
      "js": ["login.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "lion.svg"
    },
    "browser_style": true,
    "default_title": "LionelLogin"
  },
  "permissions": ["storage", "activeTab", "tabs", "webRequest"],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
